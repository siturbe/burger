<div id="container" class="container col s12 m12 l12">
    <div id='image-view' class="container s12 m12 l12">
        {{!-- <section><img id="burgerPic" src="../public/assets/images/BurgerLogo.JPG" alt = "Picture of Burger"></section> --}}
    </div>

    <div class="row">
        <div class="col s12 m6 l6">
            <ul class="collection with-header">
                <li class="collection-header"><h4>Burgers I have yet to try:</h4></li>
                {{#each burgers}}
                    {{#unless eaten}}
                    {{> burgers/burger-block eat=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
            
        <div class = "col s12 m6 l6">
            <ul class="collection with-header">
                <li class="collection-header"><h4>Burgers I already ate:</h4></li>
                {{#each burgers}}
                    {{#if eaten}}
                    {{> burgers/burger-block eat=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="col s12 m12 l12">
        <h4>Add a Burger</h4>
        <form class="create-form">
            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

                <p>
                    <label>
                        <input type="checkbox" name="eaten" value="1" checked="checked"> 
                        <span style='color: black'>Already ate it.</span><br>
                    </label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" name="eaten" value="0">
                        <span style='color: black'>Have to try it!</span>
                    </label>
                </p>
            

            <button class="btn-small red" type="submit">Add Burger</button>
        </form>
    </div>
</div>